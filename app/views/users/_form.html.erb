<div class="form">
 <div class="padding_top">
  <h1 style="background-color:powderblue;">User</h1>
 </div>
 <%= form_for @user do |f| %>
  <p>
    <%= f.label 'email' %>
    <%= f.text_field :email, placeholder: "Enter Email" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'name' %>
    <%= f.text_field :name , placeholder: "Enter Name" %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'address' %>
    <%= f.text_field :address, placeholder: "Enter Address" %>
    <% @user.errors.full_messages_for(:address).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'state' %>
    <%= f.text_field :state, placeholder: "Enter State"  %>
    <% @user.errors.full_messages_for(:state).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'city' %>
    <%= f.text_field :city , placeholder: "Enter City" %>
    <% @user.errors.full_messages_for(:city).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'phone No' %>
    <%= f.text_field :phone, placeholder: "Enter Contact No" %>
    <% @user.errors.full_messages_for(:phone).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>
  <p>
    <%= f.label 'image' %>
    <%= f.file_field :signature_image %>
  </p>
  <p>
  <%= f.submit %>
  </p>
  <% end %>
  <%= link_to "Back" , home_index_path, class: 'btn' %>
</div>
