<div class="form">
<h1>Client</h1>
<%= form_for Client.new , html: {id:'form2'} do |f| %>
  <p>
  <%= f.label 'email' %>
  <%= f.text_field :email %>
  </p>
  <p>
  <%= f.label 'name' %>
  <%= f.text_field :name%>
  </p>
  <p>
    <%= f.label 'country' %>
    <%= f.text_field :country%>
    </p>
    <p>
    <%= f.label 'address' %>
    <%= f.text_field :address%>
    </p>
  <p>
  <%= f.label 'state_name' %>
  <%= f.text_field :state_name%>
  </p>
  <p>
  <%= f.label 'city' %>
  <%= f.text_field :city%>
  </p>
  <p>
    <%= f.label 'invoice_id' %>
    <%= f.text_field :invoice_id%>
  </p>
  <p>
  <%= f.submit "submit" %>
  </p>
  <% end %>
</div>
