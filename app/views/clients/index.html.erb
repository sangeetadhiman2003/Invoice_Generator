<html>
<body>
<div class="padding_top">
<h1 style="background-color:powderblue;">Listing Clients Details</h1>
</div>
<table  class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Client id</th>
      <th>Address</th>
      <th>Email</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
         <td><%= client.name %></td>
         <td><%= client.id %></td>
         <td><%= client.address%></td>
         <td><%= client.email %></td>
         <td><%= link_to  client , class: "link-body-emphasis" do %><span class="glyphicon glyphicon-eye-open
          "><% end %></td>
         <td><%= link_to  edit_client_path(client), class: "link-body-emphasis" do %><span class="glyphicon glyphicon-pencil"<% end %></td>
         <td><%= link_to client,  method: :delete, data: { confirm: "Are you sure?" }, class: "link-body-emphasis" do %><span class="glyphicon glyphicon-trash"><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</body>
<hr>
</html>
<%= link_to "Back" , home_index_path, style: 'width: 70px; height: 30px;', class: 'btn btn-dark' %>
