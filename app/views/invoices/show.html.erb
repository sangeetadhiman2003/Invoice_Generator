        "email": "<%= @invoice.user.email %>",
        "contact": "<%= @invoice.user.phone %>"
    },
    "notes": {
        "address": "Razorpay Corporate Office",
        "invoice_id": "<%= @invoice.invoice_no %>"
    },
    "theme": {
