  var options = {
    "key": "<%= Rails.application.credentials.razorpay[:key_id] %>", // Enter the Key ID generated from the Dashboard
    "amount": "<%= @amount %>", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise or â‚¹500.
    "currency": "INR",
    "name": "<%= @organization.name %>",
    "description": "Test Transaction",
    "image": "https://example.com/your_logo",
